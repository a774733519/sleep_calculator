    <script>
        // å¤šè¯­è¨€æ”¯æŒ
        const translations = {
            en: {
                backgroundTheme: "Background Theme",
                bedtimeCalculator: "Bedtime Calculator",
                bedtimeDesc: "Enter your desired wake-up time, and we'll calculate the best bedtime for you",
