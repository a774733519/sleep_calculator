                suggestedBedtimes: "Suggested bedtimes:",
                suggestedWakeUpTimes: "Suggested wake-up times:",
                sleepCycles: "sleep cycles",
                hours: "hours",
                minutes: "minutes"
            },
            zh: {
                backgroundTheme: "èƒŒæ™¯ä¸»é¢˜",
                bedtimeCalculator: "ç¡è§‰æ—¶é—´è®¡ç®—å™¨",
                bedtimeDesc: "è¾“å…¥æ‚¨æœŸæœ›çš„èµ·åºŠæ—¶é—´ï¼Œæˆ‘ä»¬å°†ä¸ºæ‚¨è®¡ç®—æœ€ä½³ç¡è§‰æ—¶é—´",
                wakeUpTime: "èµ·åºŠæ—¶é—´",
                calculateBedtime: "è®¡ç®—ç¡è§‰æ—¶é—´",
                wakeUpCalculator: "èµ·åºŠæ—¶é—´è®¡ç®—å™¨",
                wakeUpDesc: "å¦‚æœæ‚¨ç°åœ¨è¦ç¡è§‰ï¼Œæˆ‘ä»¬å°†ä¸ºæ‚¨è®¡ç®—æœ€ä½³èµ·åºŠæ—¶é—´",
                bedtime: "ç¡è§‰æ—¶é—´",
                calculateWakeUp: "è®¡ç®—èµ·åºŠæ—¶é—´",
                quickActions: "å¿«é€Ÿæ“ä½œ",
                sleepNow: "ç°åœ¨å°±ç¡",
                powerNap: "20åˆ†é’Ÿå°æ†©",
                reset: "é‡ç½®æ‰€æœ‰",
                personalSettings: "ä¸ªäººè®¾ç½®",
                fallAsleepTime: "å…¥ç¡æ—¶é—´",
                sleepCycleLength: "ç¡çœ å‘¨æœŸé•¿åº¦",
                sleepScience: "ç¡çœ ç§‘å­¦",
                copyright: "Â© 2024 ç¡çœ å‘¨æœŸè®¡ç®—å™¨ã€‚ä¿æŒå¥åº·çš„ç¡çœ ä¹ æƒ¯ã€‚",
                suggestedBedtimes: "å»ºè®®ç¡è§‰æ—¶é—´ï¼š",
                suggestedWakeUpTimes: "å»ºè®®èµ·åºŠæ—¶é—´ï¼š",
